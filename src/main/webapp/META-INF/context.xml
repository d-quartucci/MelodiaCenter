<Context>
    <Resource 
        name="jdbc/MelodiaCenterDB" 
        auth="Container" 
        type="javax.sql.DataSource"
        maxTotal="100" 
        maxIdle="30" 
        maxWaitMillis="10000"
        username="root" 
        password="root" 
        driverClassName="com.mysql.cj.jdbc.Driver"
        url="jdbc:mysql://localhost:3306/melodiacenterdb?useUnicode=true&amp;useJDBCCompliantTimezoneShift=true&amp;useLegacyDatetimeCode=false&amp;serverTimezone=UTC"
    />
    
    <Resources>
        <PostResources
            className="org.apache.catalina.webresources.DirResourceSet"
            base="C:/progettoTSW/images/"
            webAppMount="/images"
        />
    </Resources>
    
</Context>